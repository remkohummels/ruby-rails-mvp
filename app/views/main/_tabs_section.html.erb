  </div>
  <div class="tab-content" style="margin-top:20px;">
    <div role="tabpanel" class="tab-pane active" id="t1">
      <div class="bz-items-container">
        <!--RENDER SLIDER-->
        <% @items.latest_items.each do |item| %>
          <%= render 'partials/new_bid', :locals => {item: item} %>
        <% end %>
        <!--RENDER SLIDER-->
      </div>
    </div>
    <div role="tabpanel" class="tab-pane" id="t2">
      <!--RENDER SLIDER-->
      <div class="bz-categories">
        <% @categories.each do |category| %>
          <%= render 'category_item', item: category %>
        <% end %>
      </div>
      <!--RENDER SLIDER-->
    </div>
    <div role="tabpanel" class="tab-pane" id="t3">
      <div class="row wlt_search_results grid_style">
        <!--RENDER SLIDER-->
        <% @groups.each do |item| %>
          <div class="col-xs-12 col-md-6">
            <%= render 'groups/group', group: item %>
          </div>
        <% end %>
        <!--RENDER SLIDER-->
      </div>
    </div>
    <div role="tabpanel" class="tab-pane" id="t4">
      <div class="bz-items-container">
        <!--RENDER SLIDER-->
        <% @items.free.each do |item| %>
          <%= render 'partials/new_bid', :locals => {item: item} %>
        <% end %>
        <!--RENDER SLIDER-->
      </div>
    </div>
  </div>

</div>
