<div class="bz-tabs-section .hidden-xs"> 
  <div class="bz-navbar" role="tablist">
    <div class="btn-group">
      <a href="#t1" aria-controls="t1" role="tab" data-toggle="tab" aria-expanded="false" class="bz-button bz-tab active">Make an Offer</a>
    </div>
    <div class="btn-group">
      <a href="#t2" aria-controls="t2" role="tab" data-toggle="tab" data-select-like-a-boss="1" aria-expanded="true" class="bz-button bz-tab">Categories</a>
    </div>
    <div class="btn-group">
      <a href="#t3" aria-controls="t3" role="tab" data-toggle="tab" data-select-like-a-boss="1" aria-expanded="true" class="bz-button bz-tab">Popular Groups</a>
    </div>
    <div class="btn-group">
      <a href="#t4" aria-controls="t4" role="tab" data-toggle="tab" data-select-like-a-boss="1" aria-expanded="true" class="bz-button bz-tab">Free</a>
    </div>
    <div class="btn-group post">
      <%= link_to 'Post', choose_posting_type_path, class: 'bz-oval-btn' %>
    </div>
