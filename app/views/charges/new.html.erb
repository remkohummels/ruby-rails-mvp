<%= content_for :stripe do %>
    <%= javascript_include_tag "https://js.stripe.com/v1/", "https://checkout.stripe.com/checkout.js" %>
    <%= tag :meta, :name => "stripe-key", :content => Rails.configuration.stripe[:publishable_key] %>
<% end %>
<%= content_for :js do %>
    <%= javascript_include_tag 'charges' %>
<% end %>

<div class="bz-newgroup-page item-checkout">
  <div class="container d-flex justify-center">
    <div class="col-md-10">
      <h2 class="bz-title">
        Checkout Process
      </h2>
      <div class="bz-tabs-section">
        <%= form_tag charges_path do %>
            <div class="nav" role="tablist" style="display: none;">
              <a href="#sub-pane-1" id="tab-1" data-toggle="tab"></a>
              <a href="#sub-pane-2" id="tab-2" data-toggle="tab"></a>
              <a href="#sub-pane-3" id="tab-3" data-toggle="tab"></a>
            </div>

            <div class="tab-content container">
              <div role="tabpanel" class="tab-pane active" id="sub-pane-1">
                <%= render 'checkout_address' %>
              </div>
              <div role="tabpanel" class="tab-pane" id="sub-pane-2">
                <%= render 'checkout_method' %>
              </div>
              <div role="tabpanel" class="tab-pane" id="sub-pane-3">
                <%= render 'checkout_confirmation' %>
              </div>
            </div>
        <% end %>
        </div>
  </div>
</div>
</div>

