<div class="bz-main-login-form">
  <%= semantic_form_for User.new, as: :user, url: session_path(:user), url: new_user_session_path, :html => {:id => 'loginform', :class => 'loginform', role: :form, 'data-model' => 'user'} do |f| %>
    <div class="bz-form-group m-0">
      <%= link_to "Sign In with Facebook", user_omniauth_authorize_path(:facebook), class: "bz-input bz-facebook col-xs-12 " %>
      <svg xmlns="http://www.w3.org/2000/svg" width="512" height="512" viewBox="0 0 96.1 96.1"><path d="M72.1 0L59.6 0C45.6 0 36.6 9.3 36.6 23.7v10.9H24c-1.1 0-2 0.9-2 2v15.8c0 1.1 0.9 2 2 2h12.5v39.9c0 1.1 0.9 2 2 2h16.4c1.1 0 2-0.9 2-2V54.3h14.7c1.1 0 2-0.9 2-2l0-15.8c0-0.5-0.2-1-0.6-1.4 -0.4-0.4-0.9-0.6-1.4-0.6H56.8v-9.2c0-4.4 1.1-6.7 6.8-6.7l8.4 0c1.1 0 2-0.9 2-2V2C74 0.9 73.2 0 72.1 0z" fill="#FFF"/></svg>
    </div>
    <br>
    <% flash.each do |name, msg| %>
    <div class="bs-callout bs-callout-danger" style="margin-top: 0">
      <%= content_tag :div, msg.html_safe, id: "flash_#{name}" %>
    </div>
    <% end %>
    <div class="bz-form-group text email">
      <%= f.input :email, input_html: {class: "bz-email", placeholder: "Email"}, label: false %>
    </div>
    <div class="bz-form-group text pass">
      <%= f.input :password, input_html: {class: "bz-password", placeholder: "Password"}, label: false %>
    </div>
    <%= link_to 'Forgot password?', new_password_reset_path %>
    <input type="submit" name="wp-submit" class="bz-signin" value="Sign in with email">
    <%#= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter), class: "btn btn-info " %>
    <h4 class="light">or</h4>
    <div class="bz-form-group">
      <%= link_to 'SignUp', new_user_registration_path, class: "bz-input bz-signup col-xs-12" %>
    </div>
  <% end %>
</div>
